---
import RecentEpisodes from '@components/episodes/RecentEpisodes.astro';
import Layout from '@layouts/Default.astro';
import { Card, Button } from '@eliancodes/brutal-ui';
---

<Layout
  title='Page Not Found'
  description='Page not found'
  classList='h-full'
  pageTitle='Page Not Found!'
>
  <main class='bg-orange px-6 py-24'>
    <section class='max-w-2xl mx-auto text-center'>
      <Card>
        <h1 class='outfit text-6xl md:text-8xl mb-4'>404</h1>
        <p class='dm-serif text-2xl md:text-4xl mb-4'>
          Oops! Looks like you rolled off the board.
        </p>
        <p class='poppins text-lg mb-6'>
          The page you're looking for doesn't exist. Maybe it's still waiting for its turn?
        </p>
        <div class='flex justify-center gap-4'>
          <Button href='/'>Back to Home</Button>
          <Button href='/episodes/'>Browse Episodes</Button>
        </div>
      </Card>
    </section>
    <div class='mt-8'>
      <RecentEpisodes count={3} />
    </div>
  </main>
</Layout>
