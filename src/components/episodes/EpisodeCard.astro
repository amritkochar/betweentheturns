---
import type { CollectionEntry } from 'astro:content';
import { Card, Pill } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';
import PlatformLinks from './PlatformLinks.astro';

interface Props {
  episode: CollectionEntry<'episodes'>;
}

const { episode } = Astro.props;
const guests = Array.isArray(episode.data.guest) ? episode.data.guest : [episode.data.guest];

// Extract YouTube video ID from URL
function getYouTubeVideoId(url: string): string | null {
  const patterns = [
    /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/,
    /youtube\.com\/watch\?.*v=([^&\n?#]+)/,
  ];
  for (const pattern of patterns) {
    const match = url.match(pattern);
    if (match) return match[1];
  }
  return null;
}

// Get YouTube thumbnail URL
function getYouTubeThumbnail(videoId: string): string {
  return `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`;
}

const youtubeVideoId = episode.data.youtubeUrl ? getYouTubeVideoId(episode.data.youtubeUrl) : null;
const youtubeThumbnail = youtubeVideoId ? getYouTubeThumbnail(youtubeVideoId) : null;

// Check if using placeholder image
const hasCustomImage = episode.data.imgUrl && !episode.data.imgUrl.src.includes('placeholder');
---

<Card color='white'>
  <div class='flex justify-between items-start mb-2'>
    <span class='text-sm poppins text-gray-600'>Episode {episode.data.episodeNumber}</span>
    <span class='text-sm poppins text-gray-600'>{episode.data.duration}</span>
  </div>
  <h3 class='poppins text-lg md:text-xl font-semibold'>{episode.data.title}</h3>
  <p class='text-sm poppins text-orange mt-1'>
    with {guests.join(', ')}
  </p>

  {youtubeThumbnail ? (
    <!-- YouTube Thumbnail -->
    <a
      href={episode.data.youtubeUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='block relative rounded-lg border-3 border-black my-4 h-40 overflow-hidden group cursor-pointer'
    >
      <img
        src={youtubeThumbnail}
        alt={episode.data.title}
        class='w-full h-full object-cover transition-transform duration-300 group-hover:scale-105'
      />
      <div class='absolute inset-0 flex items-center justify-center bg-black/20 group-hover:bg-black/30 transition-colors'>
        <div class='w-12 h-12 bg-white rounded-full flex items-center justify-center border-3 border-black group-hover:scale-110 transition-transform'>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-red-600 ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      </div>
    </a>
  ) : hasCustomImage ? (
    <!-- Custom Image -->
    <div class='rounded-lg border-3 border-black my-4 h-40 overflow-hidden'>
      <Image
        src={episode.data.imgUrl}
        alt={episode.data.title}
        width={800}
        height={400}
        class='rounded h-full w-full object-cover'
      />
    </div>
  ) : episode.data.spotifyUrl ? (
    <!-- Spotify Fallback -->
    <a
      href={episode.data.spotifyUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='flex rounded-lg border-3 border-black my-4 h-40 bg-green-500 items-center justify-center cursor-pointer group'
    >
      <div class='flex flex-col items-center'>
        <div class='w-12 h-12 bg-white rounded-full flex items-center justify-center border-2 border-black group-hover:scale-105 transition-transform'>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-green-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
        </div>
        <p class='poppins text-sm font-medium text-white mt-2'>Listen on Spotify</p>
      </div>
    </a>
  ) : (
    <!-- Default Placeholder -->
    <div class='rounded-lg border-3 border-black my-4 h-40 bg-purple flex items-center justify-center relative overflow-hidden'>
      <div class='text-7xl font-bold outfit text-white opacity-20'>
        {episode.data.episodeNumber.toString().padStart(2, '0')}
      </div>
      <div class='absolute'>
        <a
          href={`/episodes/${episode.id}/`}
          class='w-14 h-14 bg-white rounded-full flex items-center justify-center border-3 border-black cursor-pointer hover:scale-105 transition-transform'
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-purple ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </a>
      </div>
    </div>
  )}

  <p class='poppins text-sm line-clamp-2'>{episode.data.description}</p>

  <div class='flex justify-between items-center mt-4'>
    <PlatformLinks
      youtubeUrl={episode.data.youtubeUrl}
      spotifyUrl={episode.data.spotifyUrl}
      compact={true}
    />
  </div>

  <div class='flex justify-end mt-4'>
    <a href={`/episodes/${episode.id}/`} class='inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-black rounded card-shadow hover:bg-gray-100 transition-colors cursor-pointer poppins font-medium'>
      View Episode &rarr;
    </a>
  </div>

  <div class='hidden sm:block mt-4'>
    <p class='poppins text-xs text-gray-500'>tags:</p>
    <ul class='flex flex-wrap gap-2 mt-1'>
      {
        episode.data.tags.map((tag) => (
          <li>
            <Pill>
              <span class='text-xs'>{tag}</span>
            </Pill>
          </li>
        ))
      }
    </ul>
  </div>
</Card>
