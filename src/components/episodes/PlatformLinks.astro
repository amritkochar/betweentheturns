---
interface Props {
  youtubeUrl?: string;
  spotifyUrl?: string;
  compact?: boolean;
}

const { youtubeUrl, spotifyUrl, compact = false } = Astro.props;
---

<div class:list={['flex gap-2 sm:gap-3 flex-wrap', compact ? '' : 'mt-3 sm:mt-4']}>
  {youtubeUrl && (
    <a
      href={youtubeUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='inline-flex items-center gap-1 sm:gap-2 px-3 sm:px-4 py-2 bg-white border-2 border-black rounded card-shadow hover:bg-gray-100 transition-colors cursor-pointer poppins font-medium text-sm sm:text-base'
    >
      <div class='i-uil-youtube w-4 sm:w-5 h-4 sm:h-5' />
      {compact ? 'YouTube' : <><span class='hidden sm:inline'>Watch on </span>YouTube</>}
    </a>
  )}
  {spotifyUrl && (
    <a
      href={spotifyUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='inline-flex items-center gap-1 sm:gap-2 px-3 sm:px-4 py-2 bg-white border-2 border-black rounded card-shadow hover:bg-gray-100 transition-colors cursor-pointer poppins font-medium text-sm sm:text-base'
    >
      <div class='i-uil-music w-4 sm:w-5 h-4 sm:h-5' />
      {compact ? 'Spotify' : <><span class='hidden sm:inline'>Listen on </span>Spotify</>}
    </a>
  )}
</div>
