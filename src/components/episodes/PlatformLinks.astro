---
interface Props {
  youtubeUrl?: string;
  spotifyUrl?: string;
  compact?: boolean;
}

const { youtubeUrl, spotifyUrl, compact = false } = Astro.props;
---

<div class:list={['flex gap-3 flex-wrap', compact ? '' : 'mt-4']}>
  {youtubeUrl && (
    <a
      href={youtubeUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-black rounded card-shadow hover:bg-gray-100 transition-colors cursor-pointer poppins font-medium'
    >
      <div class='i-uil-youtube w-5 h-5' />
      {compact ? 'YouTube' : 'Watch on YouTube'}
    </a>
  )}
  {spotifyUrl && (
    <a
      href={spotifyUrl}
      target='_blank'
      rel='noopener noreferrer'
      class='inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-black rounded card-shadow hover:bg-gray-100 transition-colors cursor-pointer poppins font-medium'
    >
      <div class='i-uil-music w-5 h-5' />
      {compact ? 'Spotify' : 'Listen on Spotify'}
    </a>
  )}
</div>
